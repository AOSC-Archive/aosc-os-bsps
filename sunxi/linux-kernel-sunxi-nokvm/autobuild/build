OLDARCH=$ARCH
unset ARCH
cp -v autobuild/config "$SRCDIR"/.config
SRCARCH=arm

. autobuild/build-common/set-var

make
make INSTALL_MOD_PATH="$PKGDIR" modules_install

mkdir -p "$PKGDIR"/usr
mv "$PKGDIR"/lib "$PKGDIR"/usr/lib

mkdir -p "$PKGDIR"/usr/lib/aosc-os-armel-sunxi-boot/linux-kernel-$version$LOCALNAME/
cp arch/arm/boot/zImage "$PKGDIR"/usr/lib/aosc-os-armel-sunxi-boot/linux-kernel-$version$LOCALNAME/
mkdir -p "$PKGDIR"/usr/lib/aosc-os-armel-sunxi-boot/dtbs-kernel-$version$LOCALNAME/
find arch/arm/boot/dts/ -name '*.dtb' -exec cp {} "$PKGDIR"/usr/lib/aosc-os-armel-sunxi-boot/dtbs-kernel-$version$LOCALNAME/ ';'
export ARCH=$OLDARCH
rm -rf "$PKGDIR"/usr/lib/firmware

. autobuild/build-common/ext-hdr
. autobuild/build-common/gen-scripts
