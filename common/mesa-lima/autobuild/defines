PKGNAME=mesa-lima
PKGDES="Bleeding edge version of Mesa library specially built for Lima users"
PKGDEP="x11-lib libdrm expat systemd elfutils nettle wayland s2tc libglvnd"
BUILDDEP="x11-proto mako systemd valgrind glslang"
PKGSEC=libs

MESON_AFTER="--prefix=/opt/mesa-lima \
             -Ddri-drivers-path=/opt/mesa-lima/dri \
             -Db_ndebug=true \
             -Dplatforms=x11,wayland,drm,surfaceless \
             -Dvulkan-overlay-layer=false \
             -Ddri3=true \
             -Degl=true \
             -Dgallium-extra-hud=false \
             -Dgallium-nine=false \
             -Dgallium-opencl=disabled \
             -Dgallium-va=false \
             -Dgallium-vdpau=false \
             -Dgallium-xa=false \
             -Dgallium-xvmc=false \
             -Dgbm=true \
             -Dgles1=true \
             -Dgles2=true \
             -Dglvnd=true \
             -Dglx=dri \
             -Dllvm=false \
             -Dlmsensors=false \
             -Dosmesa=none \
             -Dshared-glapi=true \
             -Db_lto=false \
             -Ddri-drivers= \
             -Dgallium-drivers=lima,kmsro,swrast \
             -Dvalgrind=true \
             -Dlibunwind=false"
