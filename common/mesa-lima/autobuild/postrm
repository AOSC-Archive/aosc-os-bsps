if [ remove = "$1" -o abort-install = "$1" -o disappear = "$1" ]; then
	dpkg-divert --package mesa-lima --remove --rename \
	    --divert /usr/lib/libglapi.so.0.system-mesa /usr/lib/libglapi.so.0
	dpkg-divert --package mesa-lima --remove --rename \
	    --divert /usr/lib/libgbm.so.1.system-mesa /usr/lib/libgbm.so.1
	dpkg-divert --package mesa-lima --remove --rename \
	    --divert /usr/lib/libEGL_mesa.so.0.system-mesa /usr/lib/libEGL_mesa.so.0
	dpkg-divert --package mesa-lima --remove --rename \
	    --divert /usr/lib/libGLX_mesa.so.0.system-mesa /usr/lib/libGLX_mesa.so.0
	dpkg-divert --package mesa-lima --remove --rename \
	    --divert /usr/lib/libGLX_indirect.so.0.system-mesa /usr/lib/libGLX_indirect.so.0
fi
