DATE="${PKGVER/0+git/}"

mkdir -p "$PKGDIR"/usr/src/
mkdir -p "$PKGDIR/usr/src/rtl8723cs-$DATE"
sed -i 's/obj-$(CONFIG_RTL8723CS)/obj-m/g' Makefile
cp -r core hal include Kconfig Makefile os_dep platform "$PKGDIR/usr/src/rtl8723cs-$DATE"

cat > "$PKGDIR/usr/src/rtl8723cs-$DATE"/dkms.conf << EOF
PACKAGE_NAME="rtl8723cs"
PACKAGE_VERSION="$DATE"
BUILT_MODULE_NAME[0]="8723cs"
DEST_MODULE_LOCATION[0]="/extra"
AUTOINSTALL="yes"
EOF

sed -e "s/@DATE@/$DATE/g" < autobuild/postinst.in > autobuild/postinst
sed -e "s/@DATE@/$DATE/g" < autobuild/prerm.in > autobuild/prerm
